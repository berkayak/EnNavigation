<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/account1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#E4E4E4"
        android:padding="8dp"
        android:text="Account-1: 10.000₺"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/account2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#E4E4E4"
        android:padding="8dp"
        android:text="Account-2: 50.000₺"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/account3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#E4E4E4"
        android:padding="8dp"
        android:text="Account-3: 100.000₺"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/account4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#E4E4E4"
        android:padding="8dp"
        android:text="Account-4: 1.000.000₺"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>